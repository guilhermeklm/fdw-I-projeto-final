@model Gerenciamento_eventos.Models.Evento

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Criar Novo Evento</h1>

<h4 class="mt-4">Evento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Data" class="form-label"></label>
                <input asp-for="Data" class="form-control" type="date" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LocalId" class="form-label"></label>
                <select asp-for="LocalId" class="form-select" asp-items="ViewBag.LocalId"></select>
                <span asp-validation-for="LocalId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PatrocinadorId" class="form-label"></label>
                <select asp-for="PatrocinadorId" class="form-select" asp-items="ViewBag.PatrocinadorId"></select>
                <span asp-validation-for="PatrocinadorId" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
